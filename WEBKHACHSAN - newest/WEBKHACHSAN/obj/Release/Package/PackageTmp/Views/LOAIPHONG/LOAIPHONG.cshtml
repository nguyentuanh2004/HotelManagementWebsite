
@{
    Layout = "~/Views/Shared/_LayoutPageUSER.cshtml";
    ViewBag.active = 2;
    WEBKHACHSAN.Models.KSEntities3 da = new WEBKHACHSAN.Models.KSEntities3();
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Khách Sạn - Phòng Nghỉ</title>

    <style>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" >
        /* Chỉ ảnh hưởng đến phần LOAIPHONG, không thay đổi layout */
        .custom-loaiphong .hero-image {
            position: relative;
            text-align: center;
            overflow: hidden;
        }

        .custom-loaiphong .hero-image img {
            width: 100%;
            height: 600px;
            object-fit: cover;
            filter: brightness(0.8);
            transition: filter 0.5s ease-in-out;
        }

        .custom-loaiphong .hero-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(255, 255, 255, 0.7);
            padding: 10px 30px;
            border-radius: 8px;
            color: black;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        }

        .custom-loaiphong .room-card {
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .custom-loaiphong .room-card:hover {
                transform: translateY(-10px);
                box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
            }

        .custom-loaiphong .btn-primary {
            background: linear-gradient(135deg, #ff7e5f, #feb47b);
            border: none;
            transition: background 0.3s, transform 0.3s;
        }

            .custom-loaiphong .btn-primary:hover {
                background: linear-gradient(135deg, #feb47b, #ff7e5f);
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="custom-loaiphong">
        <!-- Bọc toàn bộ phần LOAIPHONG -->
        <!-- Hero Section -->
        <div class="hero-image">
            <img src="https://almanityhoian.com/wp-content/uploads/2025/02/a4a6cf6f364aea14b35b.jpg" alt="Hotel exterior">
            <div class="hero-text text-center">
                <h1 class="display-4 fw-bold text-uppercase">PHÒNG</h1>
                <p class="lead fw-normal">Trải nghiệm cuộc sống, không chỉ là một đêm nghỉ</p>
            </div>
        </div>

        @*Section giới thiệu*@
        <div class="container text-center my-4">
            <p class="text-muted">VIP999 cung cấp 139 phòng và suite, với 07 loại phòng khác nhau nhằm đáp ứng đa dạng sở thích và phong cách nghỉ dưỡng. Mỗi phòng đều mang phong cách thiết kế tối giản, tạo nên không gian thanh lịch. Tiện nghi trong phòng được bố trí gọn gàng, đơn giản và tiện lợi, mang lại sự thoải mái tối đa cho khách hàng.</p>
            <a href="#rooms" class="btn btn-primary">So sánh hạng phòng</a>
        </div>

        <!-- Danh sách phòng -->
        <div class="container py-5" id="rooms">
            <div class="row g-4">
                @foreach (var item in da.LOAIPHONGs)
                {
                    <div class="col-md-4">
                        <div class="card room-card border-0 shadow h-100">
                            <img src="~/IMAGELOAIPHONG/@item.TENHINHANHLOAIPHONG" class="card-img-top" alt="@item.TENLOAIPHONG" style="height: 200px; object-fit: cover;">
                            <div class="card-body d-flex flex-column text-center">
                                <h5 class="card-title">@item.TENLOAIPHONG</h5>
                                <p class="card-text text-muted text-clamp">
                                    @item.MOTALOAIPHONG
                                </p>
                                <div class="mt-auto">
                                    <a href="@Url.Action("Index", "PHONG", new { IDLOAIPHONG = item.IDLOAIPHONG })" class="btn btn-primary">READ MORE</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div> <!-- Kết thúc custom-loaiphong -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

